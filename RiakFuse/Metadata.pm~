

use strict;
use warnings;
package RiakFuse::Metadata;
use RiakFuse::HTTP;

my %cache;


sub get {
    my $class = shift;
    my $file  = shift;

    my $obj;
    my $attr;
    my $resp;
    if ($attr = $cache{$file}) {
	$resp = RiakFuse::HTTP->get($file , $attr->{"last-modified"});
	if ($resp == 0) {
	    $attr->{'not-modified'} = 1;
	    return $attr;
	}
	return $resp if ($resp < 0);
    } else {
	$resp = RiakFuse::HTTP->get($file);
	return $resp if ($resp < 0);
    }
    $resp->{'not-modified'} = 0;
    $cache{$file} = $resp;
    return $resp;
}

sub put {
    my $class = shift;
    my $file  = shift;
    my $obj   = shift;
    return RiakFuse::HTTP->put($file->key . "__fuse_metadata", "application/json",  $obj);
}


sub delete {
    my $class = shift;
    my $file  = shift;
    return RiakFuse::HTTP->delete($file->key . "__fuse_metadata");
}
1;
